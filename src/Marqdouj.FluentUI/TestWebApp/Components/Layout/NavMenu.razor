@rendermode InteractiveServer

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <FluentNavLink Href="avatar" Icon="@(new Icons.Regular.Size20.ImageCircle())" IconColor="Color.Accent">Avatar</FluentNavLink>
            <FluentNavLink Href="color-demo" Icon="@(new Icons.Regular.Size20.Color())" IconColor="Color.Accent">Color Picker</FluentNavLink>
            <FluentNavLink Href="theme" Icon="@(new Icons.Regular.Size20.DarkTheme())" IconColor="Color.Accent">Theme Controls</FluentNavLink>
            @* <FluentNavLink Href="sandbox" Icon="@(new Icons.Regular.Size20.DesignIdeas())" IconColor="Color.Accent">Sandbox</FluentNavLink> *@
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
